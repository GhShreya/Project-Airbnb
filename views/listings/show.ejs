<% layout("/layouts/boilerplate.ejs") -%>
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="row mt-2">
    <div class="col-8 offset-2">
        <h3><%= listing.title %></h3>
    </div>
    <div style="display:flex;">
        <div class="card col-8 offset-2 show-card" style="width: 25rem;">
            <!-- <div class="" style="display: flex;">
                
                <img src="<%= listing.image.url%>" class="card-img-top show-img offset-4" alt="listing_image"> 
            </div> -->
            <img src="<%= listing.image.url%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body mt-2">
                <h5 class="card-title">Hosted by: <i style="font-weight: 300;"><%= listing.owner.username %></i></h5>
                <p class="card-text">
                    <p><%= listing.description %></p>
                    <ul>
                        <!-- <li><%= listing.title %></li> -->
                        <li>₹ <%= listing.price.toLocaleString("en-IN") %></li>
                        <li><%= listing.location %></li>
                        <li><%= listing.country %></li>
                    </ul>
                    <% if (currUser && currUser._id.equals(listing.owner._id)){ %>
                        <div class="btns mt-2">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn offset-1">Edit</a>
                            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                                <button class="btn btn-outline-dark offset-2">Delete</button>
                            </form>
                        </div>
                    <%}%>
                </p>
            </div>
        </div>
        <div class="offset-1">
            <h3>Where you'll be</h3><br/>  <!-- Display Map -->
            <div id="map"></div>
        </div>
    </div>
    <% if(currUser){%>
        <hr>
        <div class="col-8 offset-2 mb-3">   <!--Review Section -->
            <h4>Leave a Review:</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                    <!-- <legend>First rating:</legend> -->
                    <input type="radio" id="no-rate rating" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <!-- <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"> -->
                </div>
                <div>
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="25" rows="7" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add comments for review</div>
                </div>
                <br>
                <button class="btn btn-dark edit-btn">Post</button>
            </form>
        </div>
    <%}%>
    <% if(listing.reviews.length > 0){ %>
        <hr>
        <div class="col-8 offset-2 mb-8">           <!--displaying reviews -->
            <h4>Reviews:</h4>
            <% for (review of listing.reviews){ %>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">@<%= review.author.username %></div>
                        <div style="display:flex; flex-wrap: wrap; justify-content: space-between;">
                            <div class="card-text mb-2">
                                <h6>⭐<%= review.rating %> stars</h6>
                                <%= review.comment %>
                            </div>
                            <form class="delete-review" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <!-- <h6 class="starability-result" data-rating=<%= review.rating %>>stars</h6> -->
                                <% if(currUser && currUser._id.equals(review.author._id)){%>  <!--Delete option only avaliable to the one who created it-->
                                    <button class="btn btn-dark offset-2 mt-2 mb-3">Delete</button>
                                <%}%>
                            </form>
                        </div>
                    </div> 
                </div>
                <hr>
            <% } %>
        </div>
    <%}%>
</div>
<script src="/js/map.js"></script>
</html>